# ═══════════════════════════════════════════════════════
# Vision Agent — Environment Variables
# ═══════════════════════════════════════════════════════
# Copy this file to .env and fill in your API keys
# Only GEMINI_API_KEY is required for basic functionality
# ═══════════════════════════════════════════════════════

# ── Tier 0: Z.ai Ollama (optional) ─────────────────────
OLLAMA_URL=https://ollama.z.ai
OLLAMA_TOKEN=
OLLAMA_MODEL=glm-5:cloud

# ── Tier 1: Google Gemini (recommended) ─────────────────
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ── Tier 2-3: GitHub Models (optional) ──────────────────
GITHUB_TOKEN=

# ── Tier 4: OpenAI (optional) ───────────────────────────
OPENAI_API_KEY=

# ── Tier 5: Cloudflare Workers AI (optional) ────────────
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_AUTH_TOKEN=

# ── Tier 6: Groq (optional) ────────────────────────────
GROQ_API_KEY=

# ── Feature Flags (SDK modules) ─────────────────────────
ENABLE_RAG=true
ENABLE_MCP=false
ENABLE_PROFILING=true
ENABLE_STT=false
ENABLE_TTS=false
ENABLE_GEMINI=true
ENABLE_OPENAI=false
ENABLE_ANTHROPIC=false
ENABLE_GROQ=false
ENABLE_CLOUDFLARE=false
ENABLE_OLLAMA=false
ENABLE_HUGGINGFACE=false
ENABLE_MISTRAL=false
ENABLE_AWS=false
ENABLE_DEEPGRAM=false
ENABLE_ELEVENLABS=false
ENABLE_CARTESIA=false

# ── Server Config ───────────────────────────────────────
HOST=0.0.0.0
PORT=8000
DEBUG=false
